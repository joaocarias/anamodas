@model Joao.Ana.Modas.App.Models.Tamanhos.IndexViewModel

@{
    ViewData["Title"] = Model?.Titulo;
}

<div class="row text-center">
    <div class="col-md-12">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <a asp-controller="Tamanhos" asp-action="Novo" class="btn btn-primary">
                    <i class="far fa-file-alt"></i> &nbsp;
                    Cadastrar
                </a>
            </div>
        </div>
    </div>

    @if (Model is not null && !string.IsNullOrEmpty(Model.Informacao))
    {
        <div class="col-md-12">
            <div class="row">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.Informacao
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (Model is not null && !string.IsNullOrEmpty(Model.Informacao))
    {
        <div class="col-md-12">
            <div class="row">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @Model.Informacao
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">@ViewData["Title"]</div>
            <div class="card-body">

                @if (Model is not null && Model.Tamanhos.Any())
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>                             
                                <th scope="col">Tamanho</th>
                                <th scope="col">Ordem</th>
                                <th scope="col"></th>
                            <tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Tamanhos.ToList())
                            {   
                                <tr>
                                    <td scope="row">@i.Id</td>                                  
                                    <td>@i.Nome</td>
                                    <td>@i.Ordem</td>
                                    <td> 
                                       <a asp-action="Detalhar" asp-controller="Tamanhos" asp-route-guid="@i.Id">Detalhes</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nenhum registro encontrado!</p>
                }

            </div>
        </div>
    </div>
</div>



