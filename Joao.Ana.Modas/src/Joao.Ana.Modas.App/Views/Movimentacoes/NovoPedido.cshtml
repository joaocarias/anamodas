@model Joao.Ana.Modas.App.Models.Movimentacoes.NovoPedidoViewModel

@{
    ViewData["Title"] = "Pedido";
}

<div class="row text-center">
    <div class="col-md-12">
        <h1>Pedido</h1>
    </div>
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"> <i class="fas fa-home"></i> &nbsp; Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Movimentacoes">@ViewData["Title"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">Pedido</li>
            </ol>
        </nav>
    </div>
</div>

@if (Model != null)
{
    <div class="progress">
        <div class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <div class="card mb-3 mt-3">
        <div class="card-header">
            Escolha o Cliente
        </div>
        <div class="card-body">

            <form asp-action="DefinirCliente" asp-controller="Movimentacoes" method="post">

            
                <div class="mb-3 row">

                    <div class="col-md-6">
                        <select asp-for="Pedido.Cliente.Id" asp-items="ViewBag.Clientes" class="form-control">
                            <option value=""></option>
                        </select>
                    </div>

                    <div class="col-md-3">

                        <a asp-controller="Clientes" asp-action="Novo" class="btn btn-info">
                            <i class="far fa-file-alt"></i> &nbsp;
                            Novo Cliente
                        </a>

                    </div>

                    <div class="col-md-3">

                        <button type="submit" class="btn btn-primary">
                            <i class="far fa-file-alt"></i> &nbsp;
                            Próximo
                        </button>

                    </div>


                </div>

            </form>

        </div>
    </div>

}
else
{
    <div class="alert alert-danger alert-dismissible d-flex align-items-center fade show">
        <strong class="mx-2">Error!</strong> Aconteceu um problema no carregamento da página
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

