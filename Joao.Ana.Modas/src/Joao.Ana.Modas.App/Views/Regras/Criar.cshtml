@model Joao.Ana.Modas.App.Models.Regras.CriarViewModel

@{
    ViewData["Title"] = "Criar";
}

<h3>Criar</h3>

<form asp-action="Criar" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Nome">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button style="width:auto" type="submit" class="btn btn-primary" style="width:auto">
                Criar Nova Role
            </button>
        </div>
    </div>
</form>

