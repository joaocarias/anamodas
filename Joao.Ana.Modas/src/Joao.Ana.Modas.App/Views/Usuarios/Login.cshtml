@model Joao.Ana.Modas.App.Models.Usuarios.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">@ViewData["Title"]</div>

            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="Email" class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-6">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Password" class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-6">
                            <div class="input-group">
                                <input asp-for="Password" class="form-control">
                                <span class="input-group-text" style="cursor: pointer;"><i toggle="#Password" class="eye-toggle fas fa-eye-slash"></i></span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-0">
                        <div class="col-md-8 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Login
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".eye-toggle").click(function () {
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {                   
                    input.attr("type", "text");
                    $(this).removeClass("fa-eye-slash");
                    $(this).addClass("fa-eye");
                } else {
                    input.attr("type", "password");
                    $(this).removeClass("fa-eye");
                    $(this).addClass("fa-eye-slash");
                }
            });
        });
    </script>
}